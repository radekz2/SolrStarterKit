<schema name="Carpools" version="1.1">
  <types>
  
	<fieldType name="Float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0"/>
	<fieldType name="Int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
	<fieldtype name="String"  class="solr.StrField" sortMissingLast="true"/>
	<fieldtype name="SearchText" class="solr.TextField">
		<analyzer>
		  <tokenizer class="solr.StandardTokenizerFactory"/>
		  <filter class="solr.SynonymFilterFactory" synonyms="../../global_core_configs/lang/synonyms_en.txt" ignoreCase="true" expand="false"/>
		  <!-- Case insensitive stop word removal.
					  add enablePositionIncrements=true in both the index and query
					  analyzers to leave a 'gap' for more accurate phrase queries.
					-->
		  <filter class="solr.StopFilterFactory" ignoreCase="true" words="../../global_core_configs/lang/stopwords_en.txt" enablePositionIncrements="true"/>
		  <filter class="solr.LowerCaseFilterFactory"/>
		  <filter class="solr.EnglishPossessiveFilterFactory"/>
		  <filter class="solr.KeywordMarkerFilterFactory" protected="../../global_core_configs/lang/protwords_en.txt"/>
		  <!-- Optionally you may want to use this less aggressive stemmer instead of PorterStemFilterFactory:
					<filter class="solr.EnglishMinimalStemFilterFactory"/>
					-->
		  <filter class="solr.PorterStemFilterFactory"/>
		</analyzer>
	</fieldtype>
	</types>

 <fields>
	
 </fields>

 <!-- field to use to determine and enforce document uniqueness. -->
 <uniqueKey>CarpoolIdEnrypted</uniqueKey>

 <!-- field for the QueryParser to use when an explicit fieldname is absent -->
 <defaultSearchField>CarPoolTitle</defaultSearchField>

 <!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
 <solrQueryParser defaultOperator="AND"/>
</schema>

