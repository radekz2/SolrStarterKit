<dataConfig>
		<!-- JDBC DRIVER AT http://www.mysql.com/downloads/connector/j/ -->
		<dataSource type="JdbcDataSource" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://localhost/cars" user="root" password=""/>
        <document>
                <entity name="ScaleModels"
                        query="SELECT * FROM products">
						                        
						<field column="ProductCode" name="productCode" />
						<field column="ProductName" name="productName" />
						<field column="ProductLine" name="productLine" />
						<field column="ProductScale" name="productScale" />
						<field column="ProductVendor" name="productVendor" />
						<field column="ProductDescription" name="productDescription" />
						<field column="QuantityInStock" name="quantityInStock" />
						<field column="BuyPrice" name="buyPrice" />
						<field column="MSRP" name="MSRP" />
                </entity>
        </document>
</dataConfig>